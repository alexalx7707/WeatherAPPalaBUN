}

<!-- Hero Section -->
<header class="hero-section">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-md-6">
                <div class="hero-text p-4">
                    <h1>Get Real-Time Weather Updates</h1>
                    <p class="lead">Stay informed with accurate weather forecasts, interactive maps, and personalized alerts.</p>
                    <div class="search-container mt-4">
                        <form class="d-flex" method="get" action="@Url.Action("Current", "Weather")">
                            <input class="form-control me-2" type="search" name="location" placeholder="Enter city name" aria-label="Search">
                            <button class="btn btn-outline-light" type="submit">Check Weather</button>
                        </form>
                    </div>
                    <div class="mt-4">
                        <a href="@Url.Action("Current", "Weather")" class="btn btn-primary me-2">Current Weather</a>
                        <a href="@Url.Action("Forecast", "Weather")" class="btn btn-outline-primary">7-Day Forecast</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

